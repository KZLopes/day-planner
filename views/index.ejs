<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Routine App</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/style.css">
  </head>
<body>
  <header>
    <h1>Routine Tracker</h1>
    <ul class="login">
      <li>Sign In</li>
      <li>Login</li>
    </ul>
  </header>

  <section class="newTask">
    <h2>Add a New Task</h2>
    <form action="/addTask" method="post">
      <input type="date" placeholde="Date" name="date">
      <input type="text" placeholde="Title" name="title">
      <input type="time" placeholde="Starts" name="start">
      <input type="time" placeholde="Ends" name="end">
      <input type="text" placeholde="Description" name="description">
      <input type="submit" value="">
    </form>
  </section>

  <section>
    <ul class="currentTasks">
    <% for (let i=0; i < tasksArr.length; i++) {%>
      <li class="currentTask">
        <span><%= tasksArr[i].date%>&emsp</span>
        <span><%=tasksArr[i].title%></span>
        <span class="fa fa-check"></span>
        <span class="fa fa-trash"></span>
      </li>
    <% } %>
    </ul>
  </section>


  <script src="js/main.js"></script>
</body>
</html>